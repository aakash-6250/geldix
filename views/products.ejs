<body>

    <main>
        <%- include('header') %>

        <section id="products-section">
            <div id="heading">
                <h4>Products</h4>
                <h1>Check our <span>Products</span></h1>
                <p>Each and every products delivered by us are fine-tuned for perfection and efficiency.</p>
            </div>
            <div id="products">
                <div id="products-controles">
                    <div id="search">
                        <input type="text" placeholder="Search Products">
                        <a href="/search"><i class="ri-search-line"></i></a>
                    </div>
                    <div id="filter">
                        <button>All</button>
                        <button>Tablets</button>
                        <button>Capsules</button>
                        <button>Syrups</button>
                        <button>Injectables</button>
                        <button>Ointments</button>
                        <button>All</button>
                        <button>Tablets</button>
                        <button>Capsules</button>
                        <button>Syrups</button>
                        <button>Injectables</button>
                        <button>Ointments</button>
                        <button>All</button>
                        <button>Tablets</button>
                        <button>Capsules</button>
                        <button>Syrups</button>
                        <button>Injectables</button>
                        <button>Ointments</button>
                    </div>
                </div>
                <div id="products-list">

                    <% products.forEach(product=> { %>
                    <div id="product">
                        <a href="/product/<%= product._id %>">
                            <img src="<%= product.image %>" alt="<%= product.name %>">
                            <h4 id="product-name"><%= product.productname %></h4>
                            <p id="discounted-price"><%= product.description %></p>
                        </a>
                    </div>
                    <% }); %>



